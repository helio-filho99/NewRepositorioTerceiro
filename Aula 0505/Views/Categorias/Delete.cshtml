@model Modelo.Tabelas.Categoria

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Visualizando detalhes de uma categoria";
}
<div class="panel panel-primary">
    <div class="panel-heading">
        Dados da categoria a ser removida...
    </div>
    <div class="panel-body">
        @Html.Partial("~/Views/Categorias/_PartiaDetailsContentPanel.cshtml", Model)
    </div>
    <div class="panel-footer panel-info">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <input type="submit" value="Remover Categoria" class="btn btn-danger" />
            @Html.ActionLink("Retornar para a listagem", "Index", null,
            new { @class = "btn btn-info" })
        }
    </div>
</div>